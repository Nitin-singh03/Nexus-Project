<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nearby Contracts</title>

    <!-- Google Fonts & FontAwesome -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <!-- Google Maps API -->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAhPqFBJWF9IGZNkRgBZFjW7wtUtU_ciTk&callback=initMap" async defer></script>

    <!-- Custom CSS -->
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f4f4;
            color: #333;
            text-align: center;
            padding: 20px;
        }

        h1 {
            margin-bottom: 20px;
            color: #2c3e50;
        }

        #map {
            width: 100%;
            height: 400px;
            border-radius: 10px;
            margin: 20px 0;
        }

        .contract-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }

        .contract-card {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            width: 300px;
            text-align: left;
            transition: 0.3s;
            overflow: hidden;
        }

        .contract-card:hover {
            transform: translateY(-5px);
        }

        .contract-card strong {
            color: #2c3e50;
        }

        .contract-card a {
            display: inline-block;
            margin-top: 10px;
            text-decoration: none;
            background: #3498db;
            color: white;
            padding: 8px 12px;
            border-radius: 5px;
            transition: 0.3s;
        }

        .contract-card a:hover {
            background: #2980b9;
        }

        .contract-image {
            width: 100%;
            height: 180px;
            object-fit: cover;
            border-radius: 10px;
            margin-bottom: 10px;
        }
    </style>
</head>

<body>
    <h1>Nearby Contracts</h1>

    <!-- Map Container -->
    <div id="map"></div>

    <!-- Hidden Data Storage -->
    <div id="mapData" data-user-lat="<%= userLocation.latitude %>" data-user-lng="<%= userLocation.longitude %>"
        data-contracts='<%= JSON.stringify(contracts) %>'>
    </div>

    <!-- Contract List -->
    <div class="contract-container">
        <% if (contracts.length> 0) { %>
            <% contracts.forEach(contract=> { %>
                <div class="contract-card">
                    <img class="contract-image" src="<%= contract.owner.image || '/images/default-avatar.jpg' %>"
                        alt="Contractor Image">
                    <strong>Owner:</strong>
                    <%= contract.owner.username %> <br>
                        <strong>Area:</strong>
                        <%= contract.area %> acres <br>
                            <strong>Rent:</strong>
                            <%= contract.rent %>
                                <%= contract.rent_type %> <br>
                                    <strong>Location:</strong>
                                    <%= contract.owner.district %> <br>
                                        <a href="/contract/<%= contract._id %>">View Details</a>
                </div>
                <% }) %>
                    <% } else { %>
                        <p>No contracts found within 10km.</p>
                        <% } %>
    </div>

    <script>
        function initMap() {
            // Fetch Data from HTML attributes
            var mapData = document.getElementById("mapData");
            var userLat = parseFloat(mapData.getAttribute("data-user-lat"));
            var userLng = parseFloat(mapData.getAttribute("data-user-lng"));
            var contracts = JSON.parse(mapData.getAttribute("data-contracts"));

            var userLocation = { lat: userLat, lng: userLng };

            // Initialize Map
            var map = new google.maps.Map(document.getElementById("map"), {
                zoom: 12,
                center: userLocation
            });

            // User Marker
            new google.maps.Marker({
                position: userLocation,
                map: map,
                title: "Your Location",
                icon: "http://maps.google.com/mapfiles/ms/icons/blue-dot.png"
            });

            // Contractor Markers
            contracts.forEach(contract => {
                if (contract.owner.latitude && contract.owner.longitude) {
                    var marker = new google.maps.Marker({
                        position: { lat: parseFloat(contract.owner.latitude), lng: parseFloat(contract.owner.longitude) },
                        map: map,
                        title: contract.owner.username
                    });

                    var infoWindow = new google.maps.InfoWindow({
                        content: `<h3>${contract.owner.username}</h3>
                                  <p>Area: ${contract.area} acres</p>
                                  <p>Rent: ${contract.rent} ${contract.rent_type}</p>
                                  <a href="/contract/${contract._id}">View Details</a>`
                    });

                    marker.addListener("click", function () {
                        infoWindow.open(map, marker);
                    });
                }
            });
        }
    </script>
</body>

</html>