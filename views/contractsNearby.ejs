<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nearby Contractors</title>
    <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_GOOGLE_MAPS_API_KEY&callback=initMap" async
        defer></script>
    <style>
        #map {
            height: 500px;
            width: 100%;
        }

        .contractor-list {
            margin-top: 20px;
        }
    </style>
</head>

<body>
    <h2>Nearby Contractors</h2>

    <!-- Google Map -->
    <div id="map"></div>

    <h3>Contractors List</h3>
    <ul id="contractor-list"></ul>

    <script>
        // Pass contractor data from server to JavaScript
        const userLocation = JSON.parse('<%= JSON.stringify(userLocation) %>');
        const contractors = JSON.parse('<%= JSON.stringify(contractorList) %>');

        function initMap() {
            const map = new google.maps.Map(document.getElementById("map"), {
                zoom: 12,
                center: { lat: userLocation.latitude, lng: userLocation.longitude },
            });

            // User's location marker (blue)
            new google.maps.Marker({
                position: { lat: userLocation.latitude, lng: userLocation.longitude },
                map,
                title: "Your Location",
                icon: "http://maps.google.com/mapfiles/ms/icons/blue-dot.png"
            });

            // Get contractor list container
            const contractorList = document.getElementById("contractor-list");

            // Loop through contractors and add markers
            contractors.forEach(contractor => {
                const contractorLocation = {
                    lat: contractor.contractor.location.coordinates[1],
                    lng: contractor.contractor.location.coordinates[0]
                };

                new google.maps.Marker({
                    position: contractorLocation,
                    map,
                    title: `${contractor.contractor.username} (Contracts: ${contractor.contractCount})`,
                    icon: "http://maps.google.com/mapfiles/ms/icons/red-dot.png"
                });

                // Append contractor info to the list
                const listItem = document.createElement("li");
                listItem.textContent = `${contractor.contractor.username} (Contracts: ${contractor.contractCount})`;
                contractorList.appendChild(listItem);
            });
        }
    </script>
</body>

</html>