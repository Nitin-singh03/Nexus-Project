<style>
  .search-btn {
    background-color: #3a8915;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }

  .search-btn:hover {
    background-color: #3a8915;
    color: #fff;
  }

  .search-btn i {
    display: inline;
    margin-right: 0.5rem;
  }

  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 3rem;
  }

  /* Styling the container */
  .toggle-container {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .toggle-btn {
    width: 60px;
    height: 30px;
    border-radius: 50px;
    background-color: #ccc;
    position: relative;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .toggle-icon {
    width: 26px;
    height: 26px;
    background-color: white;
    border-radius: 50%;
    position: absolute;
    top: 2px;
    left: 2px;
    transition: transform 0.3s;
  }

  .toggle-btn.active {
    background-color: #3a8915;
  }

  .toggle-btn.active .toggle-icon {
    transform: translateX(30px);
  }

  /* Text styling */
  .toggle-text {
    margin-left: 10px;
    font-weight: bold;
    color: #000000A6;
  }
</style>

